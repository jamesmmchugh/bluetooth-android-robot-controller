<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <Button
            android:id="@+id/btnRemoteController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_REMOTE"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"/>
    <Button
            android:id="@+id/btnAutomatedController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_AUTOMATED"
			android:layout_below="@+id/btnRemoteController" android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"/>


</RelativeLayout>
